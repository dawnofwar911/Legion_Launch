<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="LegionDeck.GUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="24" Spacing="20">
        <TextBlock Text="Settings" Style="{ThemeResource TitleTextBlockStyle}" />

        <InfoBar x:Name="FeedbackInfoBar" IsOpen="False" Margin="0,0,0,10" />

        <StackPanel Spacing="8">
            <TextBlock Text="IsThereAnyDeal (ITAD) API Key" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="ItadKeyBox" PlaceholderText="Enter API Key" Width="400" HorizontalAlignment="Left" />
            <Button Content="Save Key" Click="SaveSettings_Click" />
        </StackPanel>

        <StackPanel Spacing="8">
            <TextBlock Text="Authentication" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <Button Content="Login to Steam" Click="SteamLogin_Click" />
            <Button Content="Login to Xbox" Click="XboxLogin_Click" />
        </StackPanel>
    </StackPanel>
</Page>