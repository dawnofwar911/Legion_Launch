<Page
    x:Class="LegionDeck.GUI.Views.GameDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:LegionDeck.GUI.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel Spacing="20" Padding="40" XYFocusKeyboardNavigation="Enabled" Loaded="StackPanel_Loaded">
                <Grid Height="300" CornerRadius="12" Background="{ThemeResource ControlFillColorSecondaryBrush}">
                    <Image x:Name="HeroImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Transparent" Offset="0" />
                                <GradientStop Color="{ThemeResource SystemAltHighColor}" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>

                <StackPanel Spacing="10">
                    <TextBlock x:Name="GameTitle" FontSize="36" FontWeight="Bold" />
                    <Border x:Name="SourceBadge" HorizontalAlignment="Left" CornerRadius="4" Padding="8,4">
                        <TextBlock x:Name="GameSource" FontSize="16" FontWeight="Bold" Foreground="White" />
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button x:Name="PlayButton" Content="Play" Background="#FF27AE60" Foreground="White" Width="150" Height="45" Click="PlayButton_Click" Visibility="Collapsed" UseSystemFocusVisuals="True">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF2ECC71" />
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FF1E8449" />
                        </Button.Resources>
                    </Button>
                    <Button x:Name="StoreButton" Content="Open in Store" Width="150" Height="45" Click="StoreButton_Click" Visibility="Collapsed" UseSystemFocusVisuals="True" />
                    <Button Content="Back" Width="150" Height="45" Click="BackButton_Click" UseSystemFocusVisuals="True" />
                </StackPanel>

                <TextBlock x:Name="GameDescription" FontSize="16" TextWrapping="Wrap" />

                <StackPanel x:Name="SubscriptionPanel" Spacing="10" Visibility="Collapsed">
                    <TextBlock Text="Available in Subscriptions:" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border x:Name="GPBadge" Background="DarkGreen" CornerRadius="4" Padding="8,4" Visibility="Collapsed">
                            <TextBlock Text="Game Pass" Foreground="White" />
                        </Border>
                        <Border x:Name="EABadge" Background="Red" CornerRadius="4" Padding="8,4" Visibility="Collapsed">
                            <TextBlock Text="EA Play" Foreground="White" />
                        </Border>
                        <Border x:Name="UbiBadge" Background="Blue" CornerRadius="4" Padding="8,4" Visibility="Collapsed">
                            <TextBlock Text="Ubisoft+" Foreground="White" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
