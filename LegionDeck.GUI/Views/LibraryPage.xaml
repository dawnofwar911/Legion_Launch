<Page
    x:Class="LegionDeck.GUI.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:LegionDeck.GUI.Models"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Page.Resources>
        <models:SourceToColorConverter x:Key="SourceToColorConverter" />
    </Page.Resources>

    <Grid RowDefinitions="Auto,*">
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton Icon="Refresh" Label="Scan Library" Click="RefreshButton_Click" />
            <CommandBar.Content>
                <AutoSuggestBox x:Name="SearchBox" 
                                QueryIcon="Find" 
                                PlaceholderText="Search library..." 
                                Width="300" 
                                Margin="12,0" 
                                VerticalAlignment="Center"
                                QuerySubmitted="SearchBox_QuerySubmitted"
                                TextChanged="SearchBox_TextChanged"/>
            </CommandBar.Content>
        </CommandBar>

        <GridView Grid.Row="1"
                  x:Name="LibraryGridView"
                  Margin="12"
                  Padding="0,0,0,24"
                  SelectionMode="Single"
                  IsItemClickEnabled="True"
                  ItemClick="LibraryGridView_ItemClick"
                  XYFocusKeyboardNavigation="Enabled"
                  IsTabStop="True">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:LibraryGameViewModel">
                    <Grid Width="180" Height="340" Margin="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                        <StackPanel Padding="0" Spacing="0">
                            <Grid Height="240" Background="{ThemeResource ControlFillColorSecondaryBrush}" CornerRadius="8,8,0,0">
                                <Image Source="{x:Bind ImgCapsule, Mode=OneWay}" 
                                       Stretch="UniformToFill" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       ImageFailed="Image_ImageFailed" />
                            </Grid>
                            
                            <StackPanel Padding="10" Spacing="4">
                                <TextBlock Text="{x:Bind Name}" FontWeight="Bold" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" FontSize="13" />
                                <TextBlock Text="READY TO PLAY" Foreground="#FF2ECC71" FontWeight="ExtraBold" FontSize="11" Margin="0,0,0,4" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{x:Bind Source, Converter={StaticResource SourceToColorConverter}}" HorizontalAlignment="Left" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Source}" FontSize="10" Foreground="White" FontWeight="Bold" />
                                    </Border>
                                    <Button Grid.Column="1" 
                                            Content="Play" 
                                            Click="PlayButton_Click" 
                                            Background="#FF27AE60"
                                            Foreground="White"
                                            Padding="8,4"
                                            Height="32"
                                            VerticalAlignment="Center">
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF2ECC71" />
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FF1E8449" />
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>