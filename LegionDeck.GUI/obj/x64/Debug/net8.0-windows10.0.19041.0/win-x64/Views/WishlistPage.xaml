<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="LegionDeck.GUI.Views.WishlistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:LegionDeck.GUI.Views"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton x:ConnectionId='12' Icon="Refresh" Label="Sync Wishlist"                          />
        </CommandBar>

        <GridView x:ConnectionId='2' Grid.Row="1"
                  x:Name="WishlistGridView"
                  Margin="12"
                  Padding="0,0,0,24"
                  SelectionMode="Single"
                  IsItemClickEnabled="True"
                  XYFocusKeyboardNavigation="Enabled">
            <GridView.ItemTemplate>
                <DataTemplate                                              >
                    <Grid x:ConnectionId='5' Width="180" Height="340" Margin="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                        <StackPanel Padding="0" Spacing="0">
                            <Grid Height="240" Background="{ThemeResource ControlFillColorSecondaryBrush}" CornerRadius="8,8,0,0">
                                <Image x:ConnectionId='11'                              Stretch="UniformToFill" />
                            </Grid>
                            <StackPanel Padding="10" Spacing="4">
                                <TextBlock x:ConnectionId='6'                      FontWeight="Bold" MaxLines="1" TextTrimming="CharacterEllipsis" />
                                <TextBlock x:ConnectionId='7'                                                                     Foreground="Green" FontWeight="Bold" FontSize="11" />
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Border x:ConnectionId='8' Background="DarkGreen" CornerRadius="4" Padding="4,1"                                         >
                                        <TextBlock Text="GP" FontSize="9" Foreground="White" />
                                    </Border>
                                    <Border x:ConnectionId='9' Background="Red" CornerRadius="4" Padding="4,1"                                       >
                                        <TextBlock Text="EA" FontSize="9" Foreground="White" />
                                    </Border>
                                    <Border x:ConnectionId='10' Background="Blue" CornerRadius="4" Padding="4,1"                                            >
                                        <TextBlock Text="U+" FontSize="9" Foreground="White" />
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <ProgressRing x:ConnectionId='3' x:Name="LoadingRing" Grid.Row="1" IsActive="False" Width="60" Height="60" />
    </Grid>
</Page>

