<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="LegionDeck.GUI.Views.WishlistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:LegionDeck.GUI.Views"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
            <AppBarButton x:ConnectionId='13' Icon="Refresh" Label="Sync Wishlist"                          />
        </CommandBar>

        <GridView x:ConnectionId='2' Grid.Row="1"
                  x:Name="WishlistGridView"
                  Margin="12"
                  Padding="0,0,0,24"
                  SelectionMode="None"
                  IsItemClickEnabled="True">
            <GridView.ItemTemplate>
                <DataTemplate                                              >
                    <Grid x:ConnectionId='5' Width="220" Height="320" Margin="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <StackPanel Padding="0" Spacing="0">
                            <Image x:ConnectionId='6'                              Height="120" Stretch="UniformToFill" />
                            
                            <StackPanel Padding="12" Spacing="8">
                                <TextBlock x:ConnectionId='7'                      FontWeight="Bold" TextWrapping="Wrap" MaxLines="2" Height="40" />
                                
                                <TextBlock x:ConnectionId='8'                              
                                                                                  
                                           Foreground="#FF2ECC71" 
                                           FontWeight="ExtraBold" 
                                           FontSize="12" />

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border x:ConnectionId='10' Background="#FF107C10" CornerRadius="4" Padding="6,2"                                         >
                                        <TextBlock Text="GP" FontSize="10" Foreground="White" FontWeight="Bold" />
                                    </Border>
                                    <Border x:ConnectionId='11' Background="#FFFF3E24" CornerRadius="4" Padding="6,2"                                       >
                                        <TextBlock Text="EA" FontSize="10" Foreground="White" FontWeight="Bold" />
                                    </Border>
                                    <Border x:ConnectionId='12' Background="#FF0072CE" CornerRadius="4" Padding="6,2"                                            >
                                        <TextBlock Text="U+" FontSize="10" Foreground="White" FontWeight="Bold" />
                                    </Border>
                                </StackPanel>
                                
                                <TextBlock x:ConnectionId='9'                       FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <ProgressRing x:ConnectionId='3' x:Name="LoadingRing" Grid.Row="1" IsActive="False" Width="60" Height="60" />
    </Grid>
</Page>

