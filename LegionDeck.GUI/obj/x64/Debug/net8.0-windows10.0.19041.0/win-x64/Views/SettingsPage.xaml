<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="LegionDeck.GUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="24" Spacing="20">
        <TextBlock Text="Settings" Style="{ThemeResource TitleTextBlockStyle}" />

        <InfoBar x:ConnectionId='2' x:Name="FeedbackInfoBar" IsOpen="False" Margin="0,0,0,10" />

        <StackPanel Spacing="8">
            <TextBlock Text="IsThereAnyDeal (ITAD) API Key" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <PasswordBox x:ConnectionId='8' x:Name="ItadKeyBox" PlaceholderText="Enter ITAD Key" Width="400" HorizontalAlignment="Left" PasswordRevealMode="Hidden" />
        </StackPanel>

        <StackPanel Spacing="8">
            <TextBlock Text="SteamGridDB (SGDB) API Key" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <PasswordBox x:ConnectionId='6' x:Name="SgdbKeyBox" PlaceholderText="Enter SGDB Key" Width="400" HorizontalAlignment="Left" PasswordRevealMode="Hidden" />
            <Button x:ConnectionId='7' Content="Save Keys"                            />
        </StackPanel>

        <StackPanel Spacing="12">
            <TextBlock Text="Authentication" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,10,0,0" />
            <Button x:ConnectionId='3' Content="Login to Steam"                          Width="200" />
            <Button x:ConnectionId='4' Content="Login to Xbox"                         Width="200" />
            <Button x:ConnectionId='5' Content="Login to Ubisoft+"                            Width="200" />
        </StackPanel>
    </StackPanel>
</Page>

